Program. Program ::= [Def] ;

Fun.  Def     ::= Ident [Arg] "=" Exp ;

separator Arg " " ;
terminator Def ";" ;

Arg.  Arg  ::= Ident;

EVar. Exp3 ::= Ident;
EInt. Exp3 ::= Integer;
EApp. Exp2 ::= Exp2 Exp3;
EAdd. Exp1 ::= Exp1 "+" Exp2;
ESub. Exp1 ::= Exp1 "-" Exp2;
ELt.  Exp1 ::= Exp1 "<" Exp2;
EIf.  Exp  ::= "if" Exp1 "then" Exp1 "else" Exp;
ELmb. Exp  ::= "\\" Ident "->" Exp; 
coercions Exp 3;

comment "--" ;
