Prog. Program ::= [Def] ;

Fun.  Def     ::= Ident [Ident] "=" Exp ;

terminator Def ";" ;

terminator Ident "" ;

EId.  Exp3 ::= Ident ;
EInt. Exp3 ::= Integer ;
EApp. Exp2 ::= Exp2 Exp3 ;
EAdd. Exp1 ::= Exp1 "+" Exp2 ;
ESub. Exp1 ::= Exp1 "-" Exp2 ;
ELt.  Exp1 ::= Exp1 "<" Exp2 ;
EIf.  Exp  ::= "if" Exp1 "then" Exp1 "else" Exp ;
EAbs. Exp  ::= "\\" Ident "->" Exp ;

--internal ECLs. Exp ::= Exp [Assign]

--Ass. Assign ::= Id Exp

coercions Exp 3 ;

comment "--" ;
comment "{-" "-}" ;




